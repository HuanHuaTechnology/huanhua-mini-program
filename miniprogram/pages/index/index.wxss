/** miniprogram/pages/index/index.wxss **/
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
    box-sizing: border-box;
    min-height: 100vh;
    background-color: #f7f8fa;
  }
  
  /* 状态显示盒子（加载、错误、默认） */
  .status-box {
    text-align: center;
    color: #888;
    font-size: 32rpx;
  }
  
  .loading-text {
    padding: 20rpx;
  }
  
  .loading-text-small {
    font-size: 26rpx;
    color: #999;
  }
  
  .error-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #ee0a24;
  }
  
  .error-icon {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 20rpx;
  }

  .retry-btn {
    margin-top: 20rpx;
    background-color: #07c160;
    color: white;
  }
  
  /* 主要信息容器 */
  .info-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .header {
    width: 100%;
    text-align: left;
    margin-bottom: 60rpx;
  }
  
  .title {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  /* 卡片样式 */
  .card {
    width: 100%;
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .card-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #f2f2f2;
  }
  
  .card-item:last-child {
    border-bottom: none;
  }
  
  .label {
    font-size: 30rpx;
    color: #666;
  }
  
  .value {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
  }

  .balance {
    color: #07c160;
    font-weight: bold;
  }

  .cost {
    color: #ff6b35;
  }

  /* 用户信息区域 */
  .user-info-section {
    width: 100%;
  }

  /* 电量相关样式 */
  .battery-container {
    display: flex;
    align-items: center;
  }

  .battery-info {
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .battery-text {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 10rpx;
  }

  .battery-bar {
    width: 120rpx;
    height: 12rpx;
    background-color: #e5e5e5;
    border-radius: 6rpx;
    overflow: hidden;
  }

  .battery-fill {
    height: 100%;
    border-radius: 6rpx;
    transition: width 0.3s ease;
  }
  
  /* 按钮组 */
  .button-group {
    width: 100%;
    margin-top: 60rpx;
  }

  .recharge-btn {
    width: 100%;
    background-color: #07c160;
    border-color: #07c160;
    margin-bottom: 20rpx;
  }

  .refresh-btn-large {
    width: 100%;
    background-color: #f7f8fa;
    color: #666;
  }